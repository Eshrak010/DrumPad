<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#8ef451" android:endColor="#59d50e" android:angle="90" android:type="radial" android:gradientRadius="50dp"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#8ef451" android:endColor="#59d50e" android:angle="90" android:type="radial" android:gradientRadius="100dp"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>
</selector>